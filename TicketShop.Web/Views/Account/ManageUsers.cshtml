@using Microsoft.Extensions.Options
@model List<TicketShop.Domain.Identity.DTO.UserRolesDto>

@{
    ViewData["Title"] = "Manage user roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-info text-white p-5">
    <h1>Manage user roles</h1>
</div>
<hr class="p-3" />
<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User Email</th>
                    <th scope="col">Roles</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">There are no other users of the application!</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var user = Model[i];

            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        @role <br />
                    }
                </td>
                <td><a asp-controller="Account" asp-action="AddUserToRole" asp-route-id="@user.Id" class="btn btn-success">Add Roles</a></td>
                <td><a asp-controller="Account" asp-action="RemoveUserFromRole" asp-route-id="@user.Id" class="btn btn-danger">Remove Roles</a></td>
            </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>