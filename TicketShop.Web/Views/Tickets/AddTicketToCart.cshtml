@model TicketShop.Domain.DTO.AddToCartDTO

@{
    ViewData["Title"] = "Add To Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-info text-white p-5">
    <h1>Add the selected ticket to your shopping cart:</h1>
</div>

<hr class="p-3"/>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddTicketToCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieTitle"></label>
                <input disabled asp-for="SelectedTicket.MovieTitle" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>